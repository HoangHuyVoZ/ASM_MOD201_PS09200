<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D4F9FF">


    <ImageView
        android:id="@+id/iconU"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="100dp"
        android:background="#FFFFFF"
        android:src="@drawable/user" />

    <EditText
        android:id="@+id/edtuser"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="60dp"
        android:layout_toRightOf="@id/iconU"
        android:background="#FFFFFF"
        android:hint="Nhập tài khoản"
        android:textAlignment="center"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edtpass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/iconU"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:layout_toRightOf="@id/iconP"
        android:background="#FFFFFF"
        android:hint="Nhập mật khẩu"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/iconP"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/iconU"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:src="@drawable/pass" />

    <EditText
        android:id="@+id/edtpassre1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/iconP"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:layout_toRightOf="@id/iconPre1"
        android:background="#FFFFFF"
        android:hint="Nhập mật khẩu mới"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/iconPre1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/iconP"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:background="#8BC34A"
        android:src="@drawable/pass" />

    <EditText
        android:id="@+id/edtpassre2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/iconPre1"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:layout_toRightOf="@id/iconPre2"
        android:background="#FFFFFF"
        android:hint="Nhập lại mật khẩu mới"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/iconPre2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/iconPre1"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:background="#FFC107"
        android:src="@drawable/pass" />

    <Button
        android:id="@+id/btnHuy"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/iconPre2"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:background="#FFC107"
        android:text="Hủy" />

    <Button
        android:id="@+id/btnMK"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/iconPre2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:layout_toRightOf="@id/btnHuy"
        android:background="#4CAF50"
        android:text="Đổi mật khẩu" />

</RelativeLayout>