<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/TvKH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cập nhật khóa học"
        android:textAlignment="center"
        android:textColor="#F44336"
        android:textSize="30dp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/TvMaKH"
        android:hint="Mã khóa học"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@id/TvKH"
        android:textColor="#000000"
        android:background="@drawable/rectangle1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/TvMon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TvMaKH"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle1"
        android:hint="Tên môn học"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/TvGV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TvMon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle1"
        android:hint="Giảng viên"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

        <Button
            android:id="@+id/btnNgayBD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TvGV"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle7"
            android:text="Ngày bắt đầu" />

        <Button
            android:id="@+id/btnNgayKT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TvGV"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/btnNgayBD"
            android:background="@drawable/rectangle7"
            android:text="Ngày kết thúc" />
    <EditText
        android:id="@+id/edtMota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnNgayBD"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle1"
        android:hint="Mô tả"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

        <Button
            android:id="@+id/btnHuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtMota"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle3"
            android:text="Hủy" />

        <Button
            android:id="@+id/btnDY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtMota"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/btnHuy"
            android:background="@drawable/rectangle3"
            android:text="Cập nhật" /></RelativeLayout>
</androidx.cardview.widget.CardView>